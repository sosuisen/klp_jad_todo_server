<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="https://jakarta.ee/xml/ns/jakartaee"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
	version="6.0">
	<display-name>todo-server</display-name>
	<context-param>
		<param-name>dbPath</param-name>
		<param-value>c:/pleiades/2024-03/workspace/todo-server/jad.db</param-value>
	</context-param>

	<servlet>
		<description></description>
		<display-name>TodosApi</display-name>
		<servlet-name>TodosApi</servlet-name>
		<servlet-class>com.example.TodosApi</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TodosApi</servlet-name>
		<url-pattern>/api/todos</url-pattern>
	</servlet-mapping>

	<servlet>
		<description></description>
		<display-name>TodosIdApi</display-name>
		<servlet-name>TodosIdApi</servlet-name>
		<servlet-class>com.example.TodosIdApi</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TodosIdApi</servlet-name>
		<url-pattern>/api/todos/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<description></description>
		<display-name>UsersNameApi</display-name>
		<servlet-name>UsersNameApi</servlet-name>
		<servlet-class>com.example.UsersNameApi</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UsersNameApi</servlet-name>
		<url-pattern>/api/users/*</url-pattern>
	</servlet-mapping>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Protected Area</web-resource-name>
			<url-pattern>/api/users/*</url-pattern>
			<http-method>PUT</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>*</role-name>
		</auth-constraint>
	</security-constraint>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Protected Area</web-resource-name>
			<url-pattern>/api/todos/*</url-pattern>
			<http-method>DELETE</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>*</role-name>
		</auth-constraint>
	</security-constraint>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Protected Area</web-resource-name>
			<url-pattern>/api/todos</url-pattern>
			<http-method>POST</http-method>
			<http-method>DELETE</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>*</role-name>
		</auth-constraint>
	</security-constraint>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>User Area</web-resource-name>
			<url-pattern>/api/todos</url-pattern>
			<http-method>GET</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>*</role-name>
		</auth-constraint>
	</security-constraint>

	<login-config>
		<auth-method>BASIC</auth-method>
		<realm-name>MyRealm</realm-name>
	</login-config>

</web-app>